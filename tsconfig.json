{
  "compilerOptions": {
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "module": "umd",
    "target": "es5",
    "declaration": true,
    "newLine": "lf",
    "outDir": "plugins"
  },
  "include": ["src/plugins/*.ts"]
}
